<Window x:Class="Practic8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic8"
        mc:Ignorable="d"
        Title="Практическая Работа #8 " Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Top" >
            <MenuItem Header="File">
                <MenuItem Header="Exit" MenuItem.Click="Exit_Click" ToolTip="Закрыть программу" />
                <Separator></Separator>
                <MenuItem Header="about a programm" MenuItem.Click="MenuItem_Click" ToolTip="Узнать больше информации"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
