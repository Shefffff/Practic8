<Window x:Class="Practic8.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic8"
        mc:Ignorable="d"
        Title="Авторизация" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        FontSize = "20" Height="200" Width="270" Activated="Window_Activated">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <PasswordBox x:Name="txtPas" PasswordChar="*" Margin="10" Grid.Row="0" Grid.ColumnSpan="2"/>
        <Button Content="Пути" IsDefault="True" Click="btnEnter_Click" Height="30" Width="200" Margin="10" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Button Content="Отстань" IsCancel="True" Click="btnEsc_Click" Height="30" Width="200" Margin="10" Grid.Row="2" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
